
@model ERPortal.Core.Models.Comment
@using (Html.BeginForm("CommentSubmit", "Comment", new { targetPage = "Comment", FileRef = ViewBag.RefId }, FormMethod.Post, new { @id = "myCommentForm" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ERApplication.AppId, htmlAttributes: new { @class = "col-sm-5 col-form-label" })

    <div class="form-group row">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
        <div class="col-sm-6 d-flex align-items-center">
            @Html.EnumDropDownListFor(model => model.Type, "Choose...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
        <div class="col-sm-6 d-flex align-items-center">
            @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control "},@rows=10, @cols=60 })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>
}

