

@{
    ViewBag.Title = "Dashboard ER Proposal";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-info text-light">
                    <h5><i class="fas fa-table"></i> ER Proposal</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="usertable">
                        <thead class="bg-gradient-light">
                            <tr>
                                <th>AppId</th>
                                @*<th>Eamil</th>*@
                            <th>Created Date</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var x in ViewBag.ApplicationData)
                            {
                               string appid = !String.IsNullOrEmpty(x.AppId)?x.AppId:"Not Found";
                                <tr>
                                    <td>@Html.ActionLink(appid, "AppRecToDgh", "DGH",new { appid=appid},null) </td>                                   @*<td>@x.Email</td>*@
                                    <td>@x.CreatedAt</td>
                                    <td>
                                        <button class="btn btn-danger userdelete" data-UserId="@x.AppId"><i class="fas fa-trash"></i></button>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" data-UserId="@x.AppId"><i class="fas fa-edit"></i></button>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6" id="dghform">


        </div>
    </div>
</div>
<script>
 $(document).ready(function () {
        $('#usertable').DataTable(
            {
                scrollY: '50vh',
                scrollCollapse: true,
                paging: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],

                //processing: true,
                // deferLoading: 5
            });
     $('.userdelete').click(function () {



     });
     $('#dghform').html();


 });
    </script>