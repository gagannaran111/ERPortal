@model IEnumerable<ERPortal.Core.Models.ERApplication>

@{
    ViewBag.Title = "Dashboard ER Proposal";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-info text-light">
                    <h5><i class="fas fa-table"></i> ER Screening Report</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="usertable">
                        <thead class="bg-gradient-light">
                            <tr>
                                <th>AppId</th>
                                <th>Field Type</th>
                                <th>Field Name</th>
                                <th>Date Of Discovery</th>
                                @*<th>Eamil</th>*@
                                <th>Organisation</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                @*<th>Delete</th>
        <th>Edit</th>*@

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var x in Model)
                            {
                                string appid = !String.IsNullOrEmpty(x.AppId) ? x.AppId : "Not Found";
                            <tr>
                                <td>@Html.ActionLink(appid, "AppRecToDgh", "DGH", new { appid = appid }, null) </td>                                   @*<td>@x.Email</td>*@
                                <td>@x.FieldType.Type</td>
                                <td>@x.FieldName</td>
                                <td>@x.DateOfDiscovery.ToShortDateString()</td>

                                <td>@x.Organisation.Name</td>
                                <td>@x.CreatedAt.DateTime</td>
                                <td>@x.CreatedAt.DateTime</td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6" id="dghform">


        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#usertable').DataTable(
            {
                scrollY: '50vh',
                scrollCollapse: true,
                paging: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],

                //processing: true,
                // deferLoading: 5
            });
        $('.userdelete').click(function () {



        });
        $('#dghform').html();
    });
</script>