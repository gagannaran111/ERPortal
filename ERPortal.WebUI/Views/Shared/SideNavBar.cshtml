                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        @Html.ActionLink("Manager", "Index", "Admin", null, new { @class = "nav-link" })

                                    </li>
                                    <li>
                                        @Html.ActionLink("Register User", "Register", "Account", null, new { @class = "nav-link" })
                                    </li>
                                    <li>
