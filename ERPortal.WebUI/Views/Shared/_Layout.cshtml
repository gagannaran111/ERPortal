<script>
      $(document).on("click", ".GeneratePDF", function (e) {
        e.preventDefault();
        var cssfile = "";
          cssfile = "/Content/css/PrintingData.css";

        $(".container-fluid").printThis({
            importCSS: true,
            importStyle: true,
            printContainer: false,
            copyTagClasses: true,
            pageTitle: "",
            loadCSS: cssfile
        });

      });
     function alertModal(msg) {
         $('#btnalertmodal').click();
         $('#modalContentAlert').html("<strong>"+msg+"</strong>");
    }
    $('#btnCommentModal').click(function () {

        var y = $(this).attr('appid');
         $.ajax({
                url: "/Comment/Comment?appid=" + y,
                success: function (result) {
                    $('#modalContentComment').html(result);                 
                   
                },
                error: function () {
                    $('#modalContentComment').html('<div class="alert alert-danger" role="alert"> An Error has occured </div >');

                },
                fail: function (xhr, textStatus, errorThrown) {
                    $('#modalContentComment').html('<div class="alert alert-danger" role="alert">Request Failed with error: ' + errorThrown + '</div > ');

                }
            });

    });
    $('#btnCommentSave').click(function () {
         var formUrl = $('#myCommentForm').attr('action');
            $.ajax({
                url: formUrl,
                type: 'POST',
                data: $('#myCommentForm').serialize(),
                success: function (result) {
                  
                    if ('Success' == result) {
                       
                        $('#modalContentComment').html('<div class="alert alert-success" role="alert"> Successfully Added </div >');
                        
                    } else {
                        $('#modalContentComment').html(result);
                    }
                },
                error: function (result) {

                      $('#modalContentComment').html(result);
                },
                fail: function (xhr, textStatus, errorThrown) {
                    $('#modalContentComment').html('<div class="alert alert-danger" role="alert">Request Failed with error: ' + errorThrown + '</div > ');
                   
                }


             });

    });
      $(document).on('click', '.UploadFile', function (e) {
            e.preventDefault();
         var refid = $(this).attr('filerefid');
         var divid = $(this).attr('divid');
         var inputfile = $(this).attr('inputfile');
            var sendData = function () {
                var data = new FormData();
                data.append("file", $("#"+inputfile).get(0).files[0]);
                data.append("RefId", refid);
                return data;
            }();
             $.ajax({
                url: "@Url.Action("LoadUploadFile","Comment")",
                type: 'POST',
                 data: sendData,
                 contentType: false,
                processData: false,
                 success: function (result) {
                     if (result == "File upload Success") {
                         $("input[type='file']").val("");
                         GetUploadFilesData("#"+divid,refid );
                     }
                },
                 error: function () {

                    alert( "Something Went Wrong. Try Again");
                },
                fail: function (xhr, textStatus, errorThrown) {

                 }
                
             });
           e.stopImmediatePropagation();
    return false;
     });
     
    $(document).on("click",'.fileDelete',function (e) {
        e.preventDefault();
        var divId = $(this).attr('data-divid');
        var fileid = $(this).attr('data-fileid');
        var refid = $(this).attr('data-fileref');
          var sendData = { FileId:fileid };
        $.ajax({
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            url: '@Url.Action("RemoveUploadFile", "Comment")',
            data: JSON.stringify(sendData),
            datatype: 'json',
            async: false,
            success: function (data) {
               // alertModal(data);
                GetUploadFilesData(divId, refid);
            },
            error: function () {
                alertModal("Something Went Wrong. Try Again");
            },
        });
          e.stopImmediatePropagation();
    return false;
    });

   function GetUploadFilesData(divId, refid) {
        $(divId).html("No files attached");
            var sendData = { RefId:refid };
            $.ajax({
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                url: '@Url.Action("GetUploadFiles", "Comment")',
                data: JSON.stringify(sendData),
                datatype: 'json',                
                success: function (data) {
                    if (data) {
                        var txt = "";
                        if (data.length > 0) {
                            for (var i = 0; i < data.length; i++) {
                                txt += "<div class='badge badge-warning mr-2 mb-2'><a class='text-dark' href='@Url.Content("~/Content/UploadedFiles/")" +
                                    data[i].FileName + "' target='_blank'>" + data[i].FileName + "</a><a class='fileDelete small text-danger' data-fileid='" +
                                    data[i].Id + "' data-fileref='"+ data[i].FIleRef+"' data-divid ='"+divId+"'  href='#'><i class='ml-1 fa fa-times'></i></a></div>";
                            }
                            $(divId).html(txt);
                            $(divId).fadeIn("slow");
                        }
                    }
                },
                 error: function () {
                    alertModal( "Something Went Wrong. Try Again");
                },
            })
          
    }



</script>