@model IEnumerable<ERPortal.Core.Models.AuditTrails>
@{
    ViewBag.Title = "AuditTrail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-info text-light">
                    <h5><i class="fas fa-table"></i> ERC ER Proposal</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="usertable">
                        <thead class="bg-gradient-light">
                            <tr>
                                <th>AppId</th>
                                @*<th>Eamil</th>*@
                                <th>ReceiverId </th>
                                <th>SenderId</th>
                                <th>Status</th>
                                <th>Is_Active</th>
                                <th>CreatedAt</th>

                                @*<th>Delete</th>
                                    <th>Edit</th>*@
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@Html.ActionLink(x.ERApplicationId, "AppRecDGHToERC", "ERCommittee", new { x.ERApplicationId }, null) </td>

                                    @if (x.ReceiverId != null)
                                    {
                                    <td>@x.Receiver.FirstName @x.Receiver.LastName (@x.Receiver.UserRole)</td>
                                    }
                                    else { 
                                    <td></td>
                                    }
                                    <td>@x.Sender.FirstName @x.Sender.LastName (@x.Sender.UserRole)</td>
                                    <td>@x.Is_Active</td>
                                    <td>@x.Status.Status</td>
                                    <td>@x.CreatedAt.DateTime</td>

                                    @*<td>
                                            <button class="btn btn-danger userdelete" data-UserId="@x.AppId"><i class="fas fa-trash"></i></button>
                                        </td>
                                        <td>
                                            <button class="btn btn-primary" data-UserId="@x.AppId"><i class="fas fa-edit"></i></button>
                                        </td>*@
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6" id="dghform">


        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#usertable').DataTable(
            {
                scrollY: '50vh',
                scrollCollapse: true,
                paging: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],

                //processing: true,
                // deferLoading: 5
            });
        $('.userdelete').click(function () {



        });

    });
</script>
