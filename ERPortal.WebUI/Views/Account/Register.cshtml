@model ERPortal.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-info text-light">
                    <h5><i class="fas fa-user-plus"></i> Create a new account.</h5>
                </div>
                <div class="card-body">
                    @using (Ajax.BeginForm("Register", "Account", new AjaxOptions
                    {
                        HttpMethod = "POST",
                        OnSuccess = "OnSuccess(data)",
                        OnFailure = "OnFailure(data)",
                        //LoadingElementId = "progress"
                    }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("User Role", new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @*@Html.DropDownList("Name")*@
                                @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, "Choose...", new { @class = "dropdown" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-8 offset-4">
                                <button type="submit" class="btn btn-success" id="Register"><i class="fas fa-save"></i> Register</button>

                            </div>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                    }
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-info text-light">
                    <h5><i class="fas fa-table"></i> REGISTERED USER</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="bg-gradient-light border-bottom">
                            <tr>
                                <th>Name</th>
                                <th>Eamil</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody id="tblbody">
                            @foreach (var x in ViewBag.UserList)
                            {
                                <tr>

                                    <td>@x.UserName</td>
                                    <td>@x.Email</td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

<script>
    $(document).ready(function () {

    });
    function OnSuccess(response) {
        if (response.length >0) {
            $('#tblbody').empty();
            var td = "";
            $.each(response, function (index, element) {
                td += "<tr><td>" + response[index].UserName + "</td><td>" + response[index].Email + "</td><td>" + response[index].Role + "</td></tr>"

            });
            console.log(response);
            $('#tblbody').html(td);
        }
        else {

        }
    }

    function OnFailure() {
        alertModal("Try Again Error Occured.");
    }


</script>
